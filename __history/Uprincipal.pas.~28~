unit Uprincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    btnSoma: TButton;
    Label1: TLabel;
    txtNum1: TEdit;
    Label2: TLabel;
    txtNum2: TEdit;
    btnSubitracao: TButton;
    bntMultiplicacao: TButton;
    Label3: TLabel;
    txtResultado: TEdit;
    btnDivisao: TButton;
    procedure btnSomaClick(Sender: TObject);
  private
    { Private declarations }
    procedure calcularResultado(operacao: Double);
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  num1, num2, resultado: Double;

implementation

{$R *.dfm}

procedure TForm1.calcularResultado(operacao: Double);
begin
  num1 := StrToFloat(txtNum1.Text);
  num2 := StrToFloat(txtNum2.Text);
  resultado := num1 + num2;
  txtResultado.Text := FloatToStr(resultado);
end;

end.
